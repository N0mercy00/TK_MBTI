<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_IE1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_green"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/QuestionIE1"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/rg_IE1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <RadioButton
                        android:id="@+id/rb_IE1NN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강한부정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE1N"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE1M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE1Y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="긍정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE1YY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강한긍정"
                        android:layout_weight="1"/>
                </RadioGroup>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_IE2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_green"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/QuestionIE2"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/rg_IE2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <RadioButton
                        android:id="@+id/rb_IE2NN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강한부정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE2N"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE2M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE2Y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="긍정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE2YY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강한긍정"
                        android:layout_weight="1"/>
                </RadioGroup>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_IE3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_green"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/QuestionIE3"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/rg_IE3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <RadioButton
                        android:id="@+id/rb_IE3NN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강한부정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE3N"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE3M"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE3Y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="긍정"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/rb_IE3YY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강한긍정"
                        android:layout_weight="1"/>
                </RadioGroup>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/btn_gotoResult"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="계산"/>



        </LinearLayout>





    </ScrollView>

</LinearLayout>